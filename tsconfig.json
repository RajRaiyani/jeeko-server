{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },

    "module": "nodenext",
    "sourceMap": true,
    "moduleResolution": "nodenext",
    "target": "esnext"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
